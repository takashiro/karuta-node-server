{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
		"indent": [
			"error",
			"tab"
		],
		"no-tabs": "off",
		"linebreak-style": "off",
		"no-console": "off",
		"no-continue": "off",
		"no-plusplus": "off",
		"no-param-reassign": "off",
		"global-require": "off",
		"import/no-dynamic-require": "off",
		"func-names": "off",
		"no-restricted-syntax": [
			"error",
			"WithStatement"
		]
    }
}
